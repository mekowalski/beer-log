<h1>Create a Company</h1>

<%= form_for @company do |f| %>
  <label>Company Name: </label>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br><br>

  <%= f.fields_for @company.beers.build do |beer| %>
    <label>Beer Name: </label>
    <%= beer.label :name %>
    <%= beer.text_field :name %>
    <br><br>

    <%= beer.label :description %>
    <%= beer.text_area :description %>
    <br><br>

    <%= beer.label :abv %>
    <%= beer.text_field :abv %>
    <br><br>

    <%= beer.label :location %>
    <%= beer.text_field :location %>
    <br><br>
  <% end %>

  <%= f.submit %>
<% end %>
