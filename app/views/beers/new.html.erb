<h3>Add a New Beer</h3>

<%= form_for @beer do |f| %>
  <% if @beer.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@beer.errors.count, 'error') %>
      stopped this beer from being saved
    </h2>
    <ul>
      <% @beer.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field<%= 'field_with_errors' if @beer.errors[:name].any? %>">
    <label>Name:</label>
    <%= f.text_field :name %>
  </div><br><br>

  <div class="field<%= 'field_with_errors' if @beer.errors[:description].any? %>">
    <label>Description:</label>
    <%= f.text_area :description %>
  </div><br><br>

  <div class="field<%= 'field_with_errors' if @beer.errors[:abv].any? %>">
    <label>ABV(Alcohol by Volume):</label>
    <%= f.text_field :abv %>
  </div><br><br>

  <div class="field<%= 'field_with_errors' if @beer.errors[:location].any? %>">
    <label>Location:</label>
    <%= f.text_field :location %>
  </div><br><br>

  <h3>Select Company</h3>
  <div class="field<%= 'field_with_errors' if @beer.errors[:company_id].any? %>">
    <label>Company:</label>
    <%= f.collection_select :company_id, Company.all, :id, :name %>
    <br>

    <h3>Or Create a new Company</h3>
    <%= f.fields_for :company do |com| %>
      <%= com.label :name %>
      <%= com.text_field :name %>
    <% end %>
  </div><br><br>

  <h3>Select Beer Style</h3>
  <div class="field<%= 'field_with_errors' if @beer.errors[:beer_style_id].any? %>">
    <label>Beer Style:</label>
    <%= f.collection_select :beer_style_id, BeerStyle.all, :id, :name %>
    <br>

    <h3>Or Create a new Beer Style</h3>
    <%= f.fields_for :beer_style do |bs| %>
      <%= bs.label :name %>
      <%= bs.text_field :name %>
    <% end %>
  </div><br><br>

  <%= f.submit %>
<% end %>
